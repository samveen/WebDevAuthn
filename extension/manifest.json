{
	"name": "WebAuthnLinux",
	"description": "Biometric WebAuthn Credentials for Linux",
	"author": "Grammatopoulos Athanasios Vasileios (GramThanos) with modifications by Samveen",
	"version": "1.0.0",
	"homepage_url": "https://github.com/samveen/WebDevAuthn",
	"icons": {
		"19": "icons/icon.png",
		"48": "icons/icon_48.png",
		"128": "icons/icon_128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"inject.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"action": {
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"host_permissions": [
		"<all_urls>"
	],
	"permissions": [
		"storage",
		"nativeMessaging"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"webauthn-linux.js",
				"js/webauthn-authenticator.js",
				"js/webauthn-tools.js",
				"js/cbor.js",
				"js/falcon.js",
				"js/falcon.wasm"
			],
			"matches": [
				"https://*/*",
				"http://*/*"
			]
		}
	],
	"manifest_version": 3,
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "webdevauthn-linux@samveen.github.io"
		}
	}
}